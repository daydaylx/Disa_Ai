{
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      "Bash(git status)",
      "Bash(npx playwright test:*)"
    ],
    "ask": [
      "Bash(npm run build)",
      "Bash(git commit:*)",
      "Bash(git push:*)"
    ],
    "deny": [
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./**/*.pem)",
      "Read(./build)",
      "Read(./dist)"
    ],
    "additionalDirectories": []
  },
  "env": {
    "DISABLE_TELEMETRY": "1",
    "DISABLE_ERROR_REPORTING": "1"
  },
  "includeCoAuthoredBy": false,
  "model": "claude-sonnet-4-0",
  "outputStyle": "Default",
  "enableAllProjectMcpServers": false,

  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/home/d/Schreibtisch/Disa Ai"]
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp"]
    },
    "sqlite": {
      "command": "npx",
      "args": ["-y", "mcp-sqlite", "/home/d/data/app.sqlite"]
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@itseasy21/mcp-knowledge-graph"],
      "env": { "MEMORY_FILE_PATH": "/home/d/.cache/mcp/memory.jsonl" }
    }
  }
}
