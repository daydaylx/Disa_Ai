{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev",
      "type": "shell",
      "command": "npm run dev",
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "VITE v\\d",
            "endsPattern": "Local:\\s*http://localhost:5173"
          }
        }
      ]
    },
    {
      "label": "typecheck",
      "type": "shell",
      "command": "npm run typecheck",
      "problemMatcher": "$tsc"
    },
    {
      "label": "build",
      "type": "shell",
      "command": "npm run build",
      "problemMatcher": "$tsc"
    },
    {
      "label": "test",
      "type": "shell",
      "command": "npm run test"
    }
  ]
}
