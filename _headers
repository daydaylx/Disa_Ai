# Global security headers for all routes
/*
  # Security Headers
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  
  # Cross-Origin Policies (optional - enable if needed)
  # Cross-Origin-Opener-Policy: same-origin
  # Cross-Origin-Embedder-Policy: require-corp
  
  # Permissions Policy - restrict sensitive features
  Permissions-Policy: geolocation=(), microphone=(), camera=(), payment=(), usb=(), accelerometer=(), gyroscope=(), magnetometer=()
  
  # CSP Profile A (ACTIVE): Strict - no inline scripts/styles
  Content-Security-Policy: default-src 'self'; script-src 'self'; style-src 'self'; img-src 'self' data: blob:; font-src 'self'; connect-src 'self'; media-src 'self'; object-src 'none'; base-uri 'none'; frame-ancestors 'none'; form-action 'self'; upgrade-insecure-requests
  
  # CSP Profile B (PRAGMATIC - COMMENTED): Nonce-based for inline scripts/styles
  # Use this profile if you need inline scripts/styles with nonces
  # Nonce must be set in HTML: <script nonce="NONCE_VALUE"> and <style nonce="NONCE_VALUE">
  # Server-side: Generate random nonce per request and inject into HTML template
  # Content-Security-Policy: default-src 'self'; script-src 'self' 'nonce-{{NONCE_PLACEHOLDER}}'; style-src 'self' 'nonce-{{NONCE_PLACEHOLDER}}'; img-src 'self' data: blob:; font-src 'self'; connect-src 'self'; media-src 'self'; object-src 'none'; base-uri 'none'; frame-ancestors 'none'; form-action 'self'; upgrade-insecure-requests
  
  # External resource examples (COMMENTED - add only if needed):
  # For Google Fonts: font-src 'self' https://fonts.gstatic.com; style-src 'self' https://fonts.googleapis.com
  # For CDN assets: script-src 'self' https://cdn.jsdelivr.net https://unpkg.com
  # For external APIs: connect-src 'self' https://api.openrouter.ai https://api.anthropic.com
  # For analytics: script-src 'self' https://www.google-analytics.com; connect-src 'self' https://www.google-analytics.com

# HTML files - short cache time
/index.html
  Cache-Control: public, max-age=300, must-revalidate
  # Override global CSP if needed for specific pages
  # Content-Security-Policy: [page-specific CSP]

# Assets with hashes - long cache time, immutable
/assets/*
  Cache-Control: public, max-age=31536000, immutable
  
# Service Worker (if used) - short cache
/sw.js
  Cache-Control: public, max-age=0, must-revalidate

# Manifest and other PWA files
/manifest.json
  Cache-Control: public, max-age=86400
  Content-Type: application/json

/favicon.ico
  Cache-Control: public, max-age=86400