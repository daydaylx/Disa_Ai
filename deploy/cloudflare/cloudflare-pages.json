{
  "name": "disaai",
  "build": {
    "command": "npm run build",
    "destination": "dist",
    "root_dir": ".",
    "environment_variables": {
      "NODE_VERSION": "20.19",
      "CF_PAGES": "true",
      "VITE_OPENROUTER_BASE_URL": "https://openrouter.ai/api/v1",
      "VITE_ENV": "production",
      "VITE_ENABLE_ANALYTICS": "false",
      "VITE_ENABLE_PWA": "true"
    }
  },
  "preview": {
    "command": "npm run preview"
  },
  "compatibility_flags": ["nodejs_compat"],
  "functions": {
    "_routes.json": {
      "version": 1,
      "include": ["/*"],
      "exclude": ["/api/*"]
    }
  }
}
