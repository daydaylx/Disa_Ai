{
  "$schema": "https://schemas.disa.ai/design-tokens/v1.0",
  "version": "1.0.0",
  "lastUpdated": "2025-12-17",
  "description": "Mobile-First UX Design Tokens for Disa AI - Glassmorphism System",
  "constraints": {
    "mobileFirst": "360-430px primary target",
    "touchTargets": "minimum 48dp, spacing ≥8dp",
    "typography": "body 16px, line-height 1.5",
    "contrast": "text ≥4.5:1, large text ≥3:1",
    "motion": "micro 120-180ms, transitions 180-240ms",
    "performance": "≤2 backdrop-filters simultaneous"
  },
  "spacing": {
    "$type": "dimension",
    "scale": {
      "xs": "4px",
      "sm": "8px",
      "md": "12px",
      "base": "16px",
      "lg": "24px",
      "xl": "32px",
      "2xl": "48px",
      "3xl": "64px"
    },
    "touch": {
      "minimum": "48px",
      "comfortable": "56px",
      "spacing": "8px"
    },
    "thumbZone": {
      "height": "72px",
      "description": "Bottom zone for primary actions"
    }
  },
  "typography": {
    "$type": "typography",
    "fontFamily": {
      "sans": "Syne, system-ui, -apple-system, sans-serif",
      "mono": "JetBrains Mono, Consolas, monospace"
    },
    "fontSize": {
      "xs": "12px",
      "sm": "14px",
      "base": "16px",
      "md": "18px",
      "lg": "20px",
      "xl": "24px",
      "2xl": "28px",
      "3xl": "32px",
      "4xl": "40px"
    },
    "lineHeight": {
      "tight": "1.25",
      "base": "1.5",
      "relaxed": "1.75"
    },
    "fontWeight": {
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700"
    }
  },
  "radius": {
    "$type": "dimension",
    "sm": "8px",
    "md": "12px",
    "base": "16px",
    "lg": "20px",
    "xl": "28px",
    "pill": "9999px",
    "full": "50%"
  },
  "elevation": {
    "$type": "shadow",
    "E0": {
      "shadow": "none",
      "description": "No elevation"
    },
    "E1": {
      "shadow": "0 1px 2px rgba(0, 0, 0, 0.1)",
      "description": "Subtle elevation - cards"
    },
    "E2": {
      "shadow": "0 2px 6px rgba(0, 0, 0, 0.12)",
      "description": "Medium elevation - navigation"
    },
    "E3": {
      "shadow": "0 4px 12px rgba(0, 0, 0, 0.16)",
      "description": "High elevation - FAB, dialogs"
    }
  },
  "glassmorphism": {
    "$type": "composite",
    "blur": {
      "S": "8px",
      "M": "16px",
      "L": "24px"
    },
    "opacity": {
      "subtle": "6%",
      "medium": "8%",
      "strong": "10%"
    },
    "maxLayers": 2,
    "fallback": "solid background when backdrop-filter unsupported"
  },
  "motion": {
    "$type": "duration",
    "micro": "120ms",
    "quick": "180ms",
    "base": "240ms",
    "slow": "360ms",
    "easing": {
      "standard": "cubic-bezier(0.4, 0, 0.2, 1)",
      "decelerate": "cubic-bezier(0, 0, 0.2, 1)",
      "accelerate": "cubic-bezier(0.4, 0, 1, 1)"
    }
  },
  "navigation": {
    "tabs": {
      "container": {
        "height": "56px",
        "paddingBottom": "env(safe-area-inset-bottom)",
        "background": "var(--surface-glass-floating)",
        "backdropFilter": "blur(16px)",
        "borderRadius": "20px 20px 0 0",
        "boxShadow": "0 2px 6px rgba(0, 0, 0, 0.12)",
        "position": "fixed",
        "bottom": 0,
        "zIndex": 100
      },
      "tab": {
        "width": "20%",
        "minWidth": "48px",
        "height": "56px",
        "touchTarget": "48x56px",
        "padding": "8px",
        "iconSize": "24px",
        "labelSize": "12px",
        "spacing": "4px"
      },
      "activeIndicator": {
        "type": "top-border",
        "height": "3px",
        "color": "var(--color-accent-primary)",
        "transition": "transform 180ms ease-out"
      },
      "items": [
        {
          "id": "home",
          "icon": "home",
          "label": "Home",
          "route": "/",
          "priority": "secondary"
        },
        {
          "id": "chat",
          "icon": "message-square",
          "label": "Chat",
          "route": "/chat",
          "priority": "primary"
        },
        {
          "id": "models",
          "icon": "cpu",
          "label": "Models",
          "route": "/models",
          "priority": "high"
        },
        {
          "id": "roles",
          "icon": "users",
          "label": "Roles",
          "route": "/roles",
          "priority": "medium"
        },
        {
          "id": "settings",
          "icon": "settings",
          "label": "Settings",
          "route": "/settings",
          "priority": "low"
        }
      ]
    },
    "fab": {
      "size": "56px",
      "borderRadius": "28px",
      "position": {
        "bottom": "72px",
        "right": "16px",
        "fixed": true
      },
      "elevation": {
        "shadow": "0 4px 12px rgba(0, 0, 0, 0.16)",
        "blur": "16px",
        "opacity": "8%"
      },
      "color": "var(--color-accent-primary)",
      "iconSize": "24px",
      "touchTarget": "56x56px",
      "contextActions": {
        "/chat": {
          "icon": "edit",
          "label": "New Chat",
          "action": "createNewConversation"
        },
        "/models": {
          "icon": "plus",
          "label": "Add Model",
          "action": "openModelSearch"
        },
        "/roles": {
          "icon": "user-plus",
          "label": "New Role",
          "action": "openRoleCreator"
        }
      }
    }
  },
  "gestures": {
    "swipeHorizontal": {
      "enabled": true,
      "minDelta": "48px",
      "velocity": "0.3px/ms",
      "transition": "180ms ease-out",
      "contexts": ["chat-list", "conversation-view"],
      "actions": {
        "left": "nextConversation",
        "right": "previousConversation"
      }
    },
    "swipeEdge": {
      "enabled": true,
      "edgeZone": "0-16px from left",
      "minDelta": "32px",
      "transition": "240ms cubic-bezier(0.4, 0, 0.2, 1)",
      "backdropOpacity": "0.4",
      "drawerWidth": "280px",
      "action": "openDrawer"
    },
    "pullToRefresh": {
      "enabled": true,
      "minPull": "64px",
      "maxPull": "120px",
      "spinnerSize": "32px",
      "hapticFeedback": true,
      "contexts": ["model-list", "role-list"],
      "action": "reloadData"
    },
    "longPress": {
      "enabled": true,
      "duration": "500ms",
      "vibrate": "10ms",
      "contexts": ["chat-message", "model-card"],
      "action": "showContextMenu"
    }
  },
  "states": {
    "empty": {
      "layout": {
        "display": "flex",
        "flexDirection": "column",
        "alignItems": "center",
        "justifyContent": "center",
        "padding": "32px 16px",
        "minHeight": "calc(100vh - 200px)"
      },
      "illustration": {
        "size": "120px",
        "marginBottom": "24px"
      },
      "title": {
        "fontSize": "20px",
        "fontWeight": "600",
        "color": "var(--color-text-primary)",
        "marginBottom": "8px",
        "textAlign": "center"
      },
      "description": {
        "fontSize": "16px",
        "fontWeight": "400",
        "color": "var(--color-text-secondary)",
        "marginBottom": "24px",
        "textAlign": "center",
        "maxWidth": "280px"
      },
      "cta": {
        "height": "48px",
        "minWidth": "160px",
        "fontSize": "16px",
        "borderRadius": "12px"
      }
    },
    "loading": {
      "skeleton": {
        "animation": "pulse 1200ms infinite",
        "opacity": "0.6 to 0.3",
        "borderRadius": "12px",
        "background": "var(--color-line-primary)",
        "minDuration": "400ms"
      },
      "typingIndicator": {
        "dots": 3,
        "dotSize": "8px",
        "spacing": "4px",
        "animation": "bounce 1400ms infinite",
        "color": "var(--color-text-secondary)"
      }
    },
    "error": {
      "layout": {
        "display": "flex",
        "flexDirection": "column",
        "alignItems": "center",
        "justifyContent": "center",
        "padding": "32px 16px"
      },
      "icon": {
        "size": "64px",
        "color": "var(--color-status-error)",
        "marginBottom": "16px"
      },
      "title": {
        "fontSize": "20px",
        "fontWeight": "600",
        "color": "var(--color-text-primary)",
        "marginBottom": "8px",
        "textAlign": "center"
      },
      "description": {
        "fontSize": "16px",
        "fontWeight": "400",
        "color": "var(--color-text-secondary)",
        "marginBottom": "24px",
        "textAlign": "center",
        "maxWidth": "280px"
      },
      "cta": {
        "height": "48px",
        "minWidth": "120px",
        "fontSize": "16px",
        "borderRadius": "12px",
        "debounce": "1000ms"
      }
    }
  },
  "componentStates": {
    "button": {
      "default": {
        "background": "var(--color-accent-primary)",
        "color": "var(--color-text-inverse)",
        "border": "none",
        "shadow": "0 1px 2px rgba(0, 0, 0, 0.1)"
      },
      "hover": {
        "background": "var(--color-accent-hover)",
        "shadow": "0 2px 4px rgba(0, 0, 0, 0.12)",
        "transition": "all 120ms ease-out"
      },
      "active": {
        "background": "var(--color-accent-active)",
        "transform": "scale(0.98)",
        "transition": "all 120ms ease-out"
      },
      "focus": {
        "outline": "2px solid var(--color-accent-primary)",
        "outlineOffset": "2px"
      },
      "disabled": {
        "background": "var(--color-surface-disabled)",
        "color": "var(--color-text-disabled)",
        "opacity": "0.5",
        "cursor": "not-allowed"
      }
    },
    "chip": {
      "default": {
        "height": "48px",
        "padding": "12px 16px",
        "borderRadius": "12px",
        "background": "var(--surface-glass-card)",
        "border": "1px solid var(--color-line-primary)"
      },
      "selected": {
        "background": "var(--color-accent-primary)",
        "color": "var(--color-text-inverse)",
        "border": "1px solid var(--color-accent-primary)",
        "transition": "all 180ms ease-out"
      }
    },
    "card": {
      "default": {
        "minHeight": "72px",
        "padding": "16px",
        "borderRadius": "12px",
        "background": "var(--surface-glass-card)",
        "border": "1px solid var(--color-line-primary)",
        "shadow": "0 1px 2px rgba(0, 0, 0, 0.1)"
      },
      "hover": {
        "shadow": "0 2px 6px rgba(0, 0, 0, 0.12)",
        "transform": "translateY(-2px)",
        "transition": "all 120ms ease-out"
      },
      "active": {
        "shadow": "0 1px 2px rgba(0, 0, 0, 0.1)",
        "transform": "translateY(0)",
        "transition": "all 120ms ease-out"
      }
    }
  },
  "breakpoints": {
    "$type": "dimension",
    "xs": "480px",
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px",
    "primary": {
      "min": "360px",
      "max": "430px",
      "description": "Primary mobile target - Android phones"
    }
  },
  "accessibility": {
    "contrast": {
      "text": "4.5:1 minimum (WCAG AA)",
      "largeText": "3:1 minimum (WCAG AA)",
      "uiComponents": "3:1 minimum"
    },
    "focus": {
      "outlineWidth": "2px",
      "outlineStyle": "solid",
      "outlineOffset": "2px",
      "outlineColor": "var(--color-accent-primary)"
    },
    "touchTargets": {
      "minimum": "48px",
      "spacing": "8px"
    },
    "motion": {
      "respectReducedMotion": true,
      "fallback": "instant transitions when prefers-reduced-motion"
    }
  },
  "performance": {
    "backdropFilters": {
      "maxSimultaneous": 2,
      "contexts": ["bottomNav", "fab", "drawer", "sheet"],
      "fallback": "solid backgrounds on low-end devices"
    },
    "loadingStates": {
      "minDuration": "400ms",
      "preventFlash": true,
      "skeletonPreference": "over spinner"
    },
    "transitions": {
      "useTransform": true,
      "useOpacity": true,
      "avoidLayout": "avoid width/height/top/left animations"
    }
  },
  "flows": {
    "newConversation": {
      "steps": 4,
      "maxDecisionPoints": 2,
      "primaryActions": ["FAB", "modelSelect", "roleSelect", "sendMessage"],
      "thumbZoneActions": ["FAB", "modelChips"]
    },
    "modelSearch": {
      "steps": 5,
      "maxDecisionPoints": 2,
      "primaryActions": ["tabSwitch", "pullToRefresh", "cardTap", "tryButton", "favoriteButton"],
      "thumbZoneActions": ["tryButton", "favoriteButton"]
    },
    "themeChange": {
      "steps": 3,
      "maxDecisionPoints": 1,
      "primaryActions": ["tabSwitch", "rowTap", "themeToggle"],
      "thumbZoneActions": ["tabSwitch"]
    }
  },
  "testDevices": {
    "primary": [
      {
        "name": "Samsung Galaxy S21",
        "resolution": "360x800px",
        "dpr": 2.75
      },
      {
        "name": "Google Pixel 6",
        "resolution": "412x915px",
        "dpr": 2.625
      }
    ],
    "secondary": [
      {
        "name": "iPhone SE",
        "resolution": "375x667px",
        "dpr": 2
      },
      {
        "name": "iPhone 14 Pro",
        "resolution": "393x852px",
        "dpr": 3
      }
    ]
  }
}
