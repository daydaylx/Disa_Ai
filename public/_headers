/*
  # Security basics
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  X-Frame-Options: DENY

  # Optional: cross-origin isolation (nur lassen, wenn wirklich gebraucht)
  Cross-Origin-Opener-Policy: same-origin
  Cross-Origin-Embedder-Policy: require-corp

  # Permissions
  Permissions-Policy: geolocation=(), microphone=(), camera=()

  # CSP: minimal strikt, aber praxis-tauglich f√ºr Vite/React
  # Wichtig: OpenRouter erlauben (Domain + Subdomains)
  Content-Security-Policy: default-src 'self';
    base-uri 'self';
    frame-ancestors 'none';
    object-src 'none';
    img-src 'self' data: blob:;
    font-src 'self' data:;
    style-src 'self' 'unsafe-inline';
    script-src 'self';
    connect-src 'self' https://openrouter.ai https://\*.openrouter.ai\;
    worker-src 'self' blob:;
    form-action 'self'
