{
  "id": "/",
  "name": "Disa AI",
  "short_name": "Disa",
  "description": "AI-powered chat assistant with offline-first architecture",
  "start_url": "/",
  "display": "standalone",
  "display_override": ["standalone"],
  "orientation": "portrait-primary",
  "prefer_related_applications": false,
  "background_color": "#0b0f14",
  "theme_color": "#007AFF",
  "categories": ["productivity", "utilities"],
  "lang": "de",
  "scope": "/",
  "icons": [
    {
      "src": "/icons/icon.svg",
      "sizes": "72x72",
      "type": "image/svg+xml"
    },
    {
      "src": "/icons/icon.svg",
      "sizes": "96x96",
      "type": "image/svg+xml"
    },
    {
      "src": "/icons/icon.svg",
      "sizes": "128x128",
      "type": "image/svg+xml"
    },
    {
      "src": "/icons/icon.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon.svg",
      "sizes": "256x256",
      "type": "image/svg+xml"
    },
    {
      "src": "/icons/icon.svg",
      "sizes": "512x512",
      "type": "image/svg+xml"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshot-mobile.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "form_factor": "narrow"
    }
  ],
  "shortcuts": [
    {
      "name": "Neuer Chat",
      "short_name": "Chat",
      "description": "Starte eine neue Unterhaltung",
      "url": "/chat",
      "icons": [{ "src": "/icons/icon.svg", "sizes": "96x96" }]
    },
    {
      "name": "Letzte Sitzung",
      "short_name": "Letzte",
      "description": "Zurück zur letzten Unterhaltung",
      "url": "/chat",
      "icons": [{ "src": "/icons/icon.svg", "sizes": "96x96" }]
    },
    {
      "name": "Einstellungen",
      "short_name": "Settings",
      "description": "App-Einstellungen öffnen",
      "url": "/settings/api",
      "icons": [{ "src": "/icons/icon.svg", "sizes": "96x96" }]
    },
    {
      "name": "Impressum",
      "short_name": "Impressum",
      "description": "Rechtliche Informationen",
      "url": "/impressum",
      "icons": [{ "src": "/icons/icon.svg", "sizes": "96x96" }]
    },
    {
      "name": "Datenschutz",
      "short_name": "Datenschutz",
      "description": "Datenschutzerklärung",
      "url": "/datenschutz",
      "icons": [{ "src": "/icons/icon.svg", "sizes": "96x96" }]
    }
  ],
  "share_target": {
    "action": "/",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+disa",
      "url": "/?handler=%s"
    }
  ],
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "text/plain": [".txt", ".md"],
        "application/json": [".json"]
      },
      "icons": [{ "src": "/icons/icon.svg", "sizes": "96x96" }]
    }
  ],
  "handle_links": "preferred",
  "capture_links": "existing-client-navigate"
}