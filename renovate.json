{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":automergeDisabled"
  ],
  "timezone": "Europe/Berlin",
  "schedule": ["before 6am on Monday"],
  "labels": ["dependencies"],
  "commitMessagePrefix": "chore(deps):",
  "assignees": ["@me"],
  "reviewers": ["@me"],
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "matchPackagePatterns": ["eslint", "prettier", "@types"],
      "groupName": "dev tooling",
      "schedule": ["before 6am on Monday"]
    },
    {
      "matchPackagePatterns": ["react", "@react"],
      "groupName": "React ecosystem",
      "schedule": ["before 6am on Monday"]
    },
    {
      "matchPackagePatterns": ["vite", "@vitejs"],
      "groupName": "Vite ecosystem",
      "schedule": ["before 6am on Monday"]
    },
    {
      "matchPackagePatterns": ["@playwright", "playwright"],
      "groupName": "Playwright testing",
      "schedule": ["before 6am on Monday"]
    },
    {
      "matchDepTypes": ["peerDependencies"],
      "enabled": false
    },
    {
      "matchUpdateTypes": ["major"],
      "dependencyDashboardApproval": true,
      "commitMessagePrefix": "chore(deps)!:",
      "labels": ["dependencies", "breaking"]
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": false,
      "minimumReleaseAge": "3 days"
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "schedule": ["at any time"],
    "commitMessagePrefix": "fix(security):",
    "labels": ["security", "dependencies"]
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 6am on Monday"],
    "commitMessageAction": "Lock file maintenance"
  },
  "rangeStrategy": "bump",
  "semanticCommitScope": "deps",
  "semanticCommitType": "chore",
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "separateMinorPatch": false,
  "prConcurrentLimit": 3,
  "prHourlyLimit": 2,
  "stabilityDays": 3,
  "respectLatest": true,
  "followTag": "latest"
}
